<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/horizonal_padding"
    android:layout_gravity="center"
    android:gravity="center"
    android:background="@android:color/transparent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textStyle="bold"
        android:id="@+id/text1"
        android:layout_alignParentTop="true"
        android:text="@string/select_leave_type"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_margin="@dimen/horizonal_padding"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_centerInParent="true"
        android:orientation="vertical">
        <RadioGroup
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/horizonal_padding"
            android:layout_marginLeft="@dimen/magin_spacing"
            android:layout_marginRight="@dimen/magin_spacing"
            android:layout_height="wrap_content"
            android:id="@+id/radioGroup"
            android:orientation="vertical">

            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/radioAnual"
                android:text="@string/anual_leave"/>

            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/radioClinical"
                android:text="@string/maternity_leave"/>

            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/radioSick"
                android:text="@string/sick_leave"/>

            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/radioStudy"
                android:text="@string/study_leave"/>

            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/radioSabatical"
                android:text="@string/sabbatical_leave"/>
        </RadioGroup>

    </LinearLayout>
</RelativeLayout>